{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=Blog;User Id=sa;Password=admin;MultipleActiveResultSets=true;TrustServerCertificate=True"

  },
  "TokenOption": {
    "Audience": "Blog",
    "Issuer": "https://localhost:7047",
    "AccessTokenExpiration": 60,
    "RefreshTokenExpiration": 60
  },
  "RabbitMQOption": {
    "Host": "rabbitmq://localhost",
    "VirtualHost": "/",
    "UserName": "guest",
    "Password": "guest"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:/Blog_API_LOGS/webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3}] {Username} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}


